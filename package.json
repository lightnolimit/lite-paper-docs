{
  "name": "lite-paper-docs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run generate:docs && next dev -p 3333",
    "build": "npm run generate:llms && npm run generate:docs && next build",
    "start": "next start -p 3333",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "pages:build": "next build",
    "deploy": "npx wrangler pages deploy out",
    "prepare": "husky",
    "generate:llms": "node scripts/generate-llms.mjs",
    "generate:docs": "node scripts/generate-docs.mjs"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@types/marked": "^5.0.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "critters": "^0.0.23",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.11.0",
    "marked": "^15.0.11",
    "marked-highlight": "^2.2.1",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "prismjs": "^1.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-use": "^17.6.0",
    "server-only": "^0.0.1",
    "three": "^0.176.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@types/hapi__shot": "^4.1.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.176.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.29",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
